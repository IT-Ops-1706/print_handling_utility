# --- Scheduling ---
FETCH_INTERVAL_MINUTES=15
POLL_INTERVAL_SECONDS=30
MAX_POLL_TIMEOUT_SECONDS=90

# --- Batch Processing ---
BATCH_SIZE=10

# --- Retry ---
MAX_RETRIES=3
