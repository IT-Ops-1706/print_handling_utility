# --- Email Notifications (Microsoft Graph OAuth) ---
EMAIL_TENANT_ID=your_azure_tenant_id
EMAIL_CLIENT_ID=your_azure_client_id
EMAIL_CLIENT_SECRET=your_azure_client_secret
EMAIL_SENDER=noreply@yourdomain.com
